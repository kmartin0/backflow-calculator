<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--colorPrimary colors map to components and elements, such as app bars and buttons. -->
    <!--colorSecondary colors are most often used as accents on components, such as FABs and -->
    <!--selection controls.-->
    <color name="color_primary">#01579b</color> <!-- Light Blue 900 -->
    <color name="color_primary_variant">#002f6c</color> <!-- Light Blue 900 Dark -->
    <color name="color_secondary">#ffca28</color> <!-- Amber 400 -->
    <color name="color_secondary_variant">#c79a00</color> <!-- Amber 400 Dark -->

    <!--colorBackground appears behind scrollable content and is used for the default window-->
    <!--background. colorSurface is mapped to the surface of components such as cards, sheets-->
    <!--and menus. colorError is used to indicate an error state for components such as-->
    <!--text fields. E57654 -->
    <color name="color_background">#ffffff</color>
    <color name="color_surface">#f2f2f2</color>
    <color name="color_error">#B00020</color>

    <!--"On" colors define how text, icons and strokes are colored in relation to the surface-->
    <!--on which they appear.-->
    <color name="color_on_primary">#ffffff</color>
    <color name="color_on_secondary">#000000</color>
    <color name="color_on_background">#000000</color>
    <color name="color_on_surface">#000000</color>
    <color name="color_on_error">#ffffff</color>

</resources>