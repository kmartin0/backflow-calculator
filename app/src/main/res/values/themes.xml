<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Top level DayNight theme to be used in AndroidManifest.xml-->
    <style name="Theme.Backflow.Calculator" parent="Base.Theme.Backflow.Calculator" />

    <!--Base custom theme which will be shared between both light and dark theme variants-->
    <style name="Base.Theme.Backflow.Calculator" parent="Base.Theme.MaterialThemeBuilder">
        <!--Material color attributes -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>

        <item name="android:colorBackground">@color/color_background</item>
        <item name="colorSurface">@color/color_surface</item>
        <item name="colorError">@color/color_error</item>

        <item name="colorOnPrimary">@color/color_on_primary</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <item name="colorOnBackground">@color/color_on_background</item>
        <item name="colorOnSurface">@color/color_on_surface</item>
        <item name="colorOnError">@color/color_on_error</item>

        <!--Material type attributes-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Theme.Backflow.Calculator.Headline1
        </item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Theme.Backflow.Calculator.Headline2
        </item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Theme.Backflow.Calculator.Headline3
        </item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Theme.Backflow.Calculator.Headline4
        </item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Theme.Backflow.Calculator.Headline5
        </item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Theme.Backflow.Calculator.Headline6
        </item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Theme.Backflow.Calculator.Subtitle1
        </item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Theme.Backflow.Calculator.Subtitle2
        </item>
        <item name="textAppearanceBody1">@style/TextAppearance.Theme.Backflow.Calculator.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Theme.Backflow.Calculator.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Theme.Backflow.Calculator.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Theme.Backflow.Calculator.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Theme.Backflow.Calculator.Overline</item>

        <!--Material shape attributes-->
        <item name="shapeAppearanceSmallComponent">
            @style/ShapeAppearance.Theme.Backflow.Calculator.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.Theme.Backflow.Calculator.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">
            @style/ShapeAppearance.Theme.Backflow.Calculator.LargeComponent
        </item>

        <!--Component styles-->
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.PrimarySurface</item>
        <item name="textInputStyle">@style/Widget.MyTheme.TextInputLayout.OutlinedBox</item>

    </style>

    <style name="Base.Theme.MaterialThemeBuilder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="alphaEmphasisHigh">@dimen/alpha_emphasis_high</item>
        <item name="alphaEmphasisMedium">@dimen/alpha_emphasis_medium</item>
        <item name="alphaEmphasisDisabled">@dimen/alpha_emphasis_disabled</item>

        <item name="android:statusBarColor" tools:ignore="NewApi">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>

        <!--Remap legacy AppCompat attributes to MaterialComponent attributes-->
        <item name="colorPrimaryDark">?colorPrimaryVariant</item>
        <item name="colorAccent">?colorSecondary</item>
    </style>

</resources>